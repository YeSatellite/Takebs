<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yesat.takebs">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>


    <!-- android:debuggable="false" -->
    <application
        android:debuggable="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:configChanges="orientation"
        android:screenOrientation="portrait"
        android:theme="@style/AppTheme">
        <activity
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:name=".LogInActivity"
            android:theme="@style/LogInNoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:name=".SignUpActivity"
            android:label="Create account" />
        <activity
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" />
        <activity
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:name=".MainActivity"
            android:launchMode="singleTop"
            android:windowSoftInputMode="adjustResize">

            <meta-data android:name="android.app.searchable"
                android:resource="@xml/searchable" />

            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

        </activity>
        <activity android:name=".RouteActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:label="Route">
        </activity>
        <activity android:name=".ChatActivity"
            android:label="Chat"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            />
        <activity android:name=".UserInfoActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:name=".CommentActivity"
            android:label="Review" />
        <activity
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:name=".AddCommActivity"
            android:label="Add Review" />
        <activity android:name=".SettingActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:label="Profile Setting"/>
        <activity
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:name=".TextActivity"
            android:label="License"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".LitActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name=".MyRouteActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
    </application>

</manifest>