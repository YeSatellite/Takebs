<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sign_up"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yesat.takebs.SignUpActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/common_google_signin_btn_text_dark_default">

            <RelativeLayout
                android:id="@+id/relativeLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="64dp"
                app:layout_constraintTop_toBottomOf="@+id/about">

                <ProgressBar
                    android:id="@+id/progressBar2"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:elevation="4dp"
                    android:visibility="invisible" />

                <Button
                    android:id="@+id/bt_sign_up"
                    android:layout_width="200dp"
                    android:layout_height="35dp"
                    android:layout_alignTop="@+id/progressBar2"
                    android:layout_centerHorizontal="true"
                    android:background="@color/colorPrimary"
                    android:text="Sign up"
                    android:textColor="@android:color/background_light" />

            </RelativeLayout>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_ava"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="16dp"
                android:clickable="true"
                android:cropToPadding="false"
                android:adjustViewBounds="false"
                android:scaleType="centerCrop"
                android:padding="0dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/avatar"
                tools:layout_constraintLeft_creator="1"
                tools:layout_constraintRight_creator="1"
                tools:layout_constraintTop_creator="1" />

            <EditText
                android:id="@+id/to_city"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_marginEnd="22dp"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="22dp"
                android:layout_marginStart="22dp"
                android:layout_marginTop="16dp"
                android:ems="10"
                android:hint="Email*"
                android:inputType="textEmailAddress"
                android:paddingBottom="0dp"
                android:paddingTop="0dp"
                android:textSize="14sp"
                app:layout_constraintHorizontal_bias="0.54"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_ava"
                tools:layout_constraintLeft_creator="1"
                tools:layout_constraintRight_creator="1" />

            <EditText
                android:id="@+id/su_pass"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:ems="10"
                android:hint="Password*"
                android:inputType="textPassword"
                android:paddingBottom="0dp"
                android:paddingTop="0dp"
                android:textSize="14sp"
                app:layout_constraintLeft_toLeftOf="@+id/to_city"
                app:layout_constraintRight_toRightOf="@+id/to_city"
                app:layout_constraintTop_toBottomOf="@+id/to_city"
                tools:layout_constraintLeft_creator="1"
                tools:layout_constraintRight_creator="1"
                tools:layout_constraintTop_creator="1" />

            <EditText
                android:id="@+id/su_pass2"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:ems="10"
                android:hint="Confirm Password*"
                android:inputType="textPassword"
                android:paddingBottom="0dp"
                android:paddingTop="0dp"
                android:textSize="14sp"
                app:layout_constraintLeft_toLeftOf="@+id/su_pass"
                app:layout_constraintRight_toRightOf="@+id/su_pass"
                app:layout_constraintTop_toBottomOf="@+id/su_pass"
                tools:layout_constraintLeft_creator="1"
                tools:layout_constraintRight_creator="1"
                tools:layout_constraintTop_creator="1" />

            <EditText
                android:id="@+id/su_user"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:ems="10"
                android:hint="Username*"
                android:inputType="textPersonName"
                android:paddingBottom="0dp"
                android:paddingTop="0dp"
                android:textSize="14sp"
                app:layout_constraintLeft_toLeftOf="@+id/su_pass2"
                app:layout_constraintRight_toRightOf="@+id/su_pass2"
                app:layout_constraintTop_toBottomOf="@+id/su_pass2"
                tools:layout_constraintLeft_creator="1"
                tools:layout_constraintRight_creator="1"
                tools:layout_constraintTop_creator="1" />

            <EditText
                android:id="@+id/su_coun"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:ems="10"
                android:hint="Country"
                android:inputType="textPersonName"
                android:paddingBottom="0dp"
                android:paddingTop="0dp"
                android:textSize="14sp"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="@+id/su_user"
                app:layout_constraintRight_toRightOf="@+id/su_user"
                app:layout_constraintTop_toBottomOf="@+id/su_user"
                tools:layout_constraintLeft_creator="1"
                tools:layout_constraintRight_creator="1"
                tools:layout_constraintTop_creator="1" />

            <EditText
                android:id="@+id/su_city"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:ems="10"
                android:hint="City"
                android:inputType="textPersonName"
                android:paddingBottom="0dp"
                android:paddingTop="0dp"
                android:textSize="14sp"
                app:layout_constraintLeft_toLeftOf="@+id/su_coun"
                app:layout_constraintRight_toRightOf="@+id/su_coun"
                app:layout_constraintTop_toBottomOf="@+id/su_coun"
                tools:layout_constraintLeft_creator="1"
                tools:layout_constraintRight_creator="1"
                tools:layout_constraintTop_creator="1" />

            <TextView
                android:id="@+id/su_data"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:background="?attr/editTextBackground"
                android:gravity="center_vertical"
                android:hint="Date of birth"
                android:paddingBottom="0dp"
                android:paddingTop="0dp"
                android:textAppearance="?android:attr/textAppearanceMediumInverse"
                android:textColor="?attr/editTextColor"
                android:textSize="14sp"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="@+id/su_city"
                app:layout_constraintRight_toRightOf="@+id/su_city"
                app:layout_constraintTop_toBottomOf="@+id/su_city"
                tools:layout_constraintLeft_creator="1"
                tools:layout_constraintRight_creator="1"
                tools:layout_constraintTop_creator="1" />

            <EditText
                android:id="@+id/about"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/multitext_frame"
                android:ems="10"
                android:gravity="top"
                android:hint="About me(Up to 140 characters...)"
                android:includeFontPadding="false"
                android:inputType="textMultiLine"
                android:maxLength="160"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:textSize="14sp"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintLeft_toLeftOf="@+id/su_data"
                app:layout_constraintRight_toRightOf="@+id/su_data"
                app:layout_constraintTop_toBottomOf="@+id/su_data" />

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="28dp"
                android:layout_height="24dp"
                android:layout_marginBottom="1dp"
                android:layout_marginEnd="24dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                android:checked="false"
                android:duplicateParentState="false"
                app:layout_constraintBottom_toBottomOf="@+id/team"
                app:layout_constraintLeft_toLeftOf="@+id/about"
                app:layout_constraintTop_toTopOf="@+id/team" />

            <TextView
                android:id="@+id/team"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:clickable="true"
                android:text="TERMS AND CONDITIONS"
                android:textSize="14sp"
                app:layout_constraintLeft_toRightOf="@+id/checkBox"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/about" />

        </android.support.constraint.ConstraintLayout>
    </ScrollView>

</FrameLayout>
