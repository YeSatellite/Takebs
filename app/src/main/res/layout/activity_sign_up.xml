<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sign_up"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yesat.yesat.takebs.SignUpActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.constraint.ConstraintLayout
            android:id="@+id/activity_sign_upa"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="com.yesat.yesat.takebs.SignUpActivity"
            android:paddingBottom="50dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="100dp"
                app:srcCompat="@drawable/avatar"
                android:id="@+id/iv_ava"
                android:clickable="true"
                android:padding="0dp"
                tools:layout_constraintTop_creator="1"
                tools:layout_constraintRight_creator="1"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="16dp"
                tools:layout_constraintLeft_creator="1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_height="100dp"
                android:cropToPadding="false"
                android:adjustViewBounds="false" />

            <EditText
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/to_city"
                android:layout_width="0dp"
                android:hint="Email*"
                android:layout_height="35dp"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"
                android:layout_marginStart="22dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="22dp"
                android:layout_marginEnd="22dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="22dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/iv_ava"
                app:layout_constraintHorizontal_bias="0.54"
                tools:layout_constraintRight_creator="1"
                tools:layout_constraintLeft_creator="1" />

            <EditText
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/su_pass"
                android:hint="Password*"
                android:layout_width="0dp"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"
                tools:layout_constraintTop_creator="1"
                app:layout_constraintTop_toBottomOf="@+id/to_city"
                android:layout_height="35dp"
                app:layout_constraintLeft_toLeftOf="@+id/to_city"
                app:layout_constraintRight_toRightOf="@+id/to_city"
                tools:layout_constraintRight_creator="1"
                tools:layout_constraintLeft_creator="1" />

            <EditText
                android:layout_width="0dp"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/su_pass2"
                android:hint="Confirm Password*"
                android:layout_height="35dp"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"
                tools:layout_constraintTop_creator="1"
                tools:layout_constraintRight_creator="1"
                app:layout_constraintRight_toRightOf="@+id/su_pass"
                app:layout_constraintTop_toBottomOf="@+id/su_pass"
                tools:layout_constraintLeft_creator="1"
                app:layout_constraintLeft_toLeftOf="@+id/su_pass" />

            <EditText
                android:layout_width="0dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/su_user"
                android:hint="Username*"
                android:layout_height="35dp"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"
                tools:layout_constraintTop_creator="1"
                tools:layout_constraintRight_creator="1"
                app:layout_constraintRight_toRightOf="@+id/su_pass2"
                app:layout_constraintTop_toBottomOf="@+id/su_pass2"
                tools:layout_constraintLeft_creator="1"
                app:layout_constraintLeft_toLeftOf="@+id/su_pass2" />

            <EditText
                android:layout_width="0dp"
                android:ems="10"
                android:id="@+id/su_coun"
                android:inputType="textPersonName"
                android:hint="Country"
                android:layout_height="35dp"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"
                tools:layout_constraintTop_creator="1"
                tools:layout_constraintRight_creator="1"
                app:layout_constraintRight_toRightOf="@+id/su_user"
                app:layout_constraintTop_toBottomOf="@+id/su_user"
                tools:layout_constraintLeft_creator="1"
                app:layout_constraintLeft_toLeftOf="@+id/su_user"
                app:layout_constraintHorizontal_bias="0.0" />
            <EditText
                android:layout_width="0dp"
                android:ems="10"
                android:id="@+id/su_city"
                android:inputType="textPersonName"
                android:hint="City"
                android:layout_height="35dp"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"
                tools:layout_constraintTop_creator="1"
                tools:layout_constraintRight_creator="1"
                app:layout_constraintRight_toRightOf="@+id/su_coun"
                app:layout_constraintTop_toBottomOf="@+id/su_coun"
                tools:layout_constraintLeft_creator="1"
                app:layout_constraintLeft_toLeftOf="@+id/su_coun" />
            <TextView
                android:hint="Data of birth"
                android:textColor="?attr/editTextColor"
                android:background="?attr/editTextBackground"
                android:gravity="center_vertical"
                android:textAppearance="?android:attr/textAppearanceMediumInverse"
                android:id="@+id/su_data"
                android:layout_height="35dp"
                tools:layout_constraintTop_creator="1"
                tools:layout_constraintRight_creator="1"
                app:layout_constraintRight_toRightOf="@+id/su_city"
                app:layout_constraintTop_toBottomOf="@+id/su_city"
                tools:layout_constraintLeft_creator="1"
                app:layout_constraintLeft_toLeftOf="@+id/su_city"
                app:layout_constraintHorizontal_bias="0.0"
                android:layout_width="0dp"
                android:paddingTop="0dp"
                android:paddingBottom="0dp" />

            <EditText
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/about"
                android:includeFontPadding="false"
                android:gravity="top"
                android:background="@drawable/multitext_frame"
                android:textSize="17sp"
                android:maxLength="160"
                android:hint="About me(Up to 140 characters...)"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/su_data"
                app:layout_constraintLeft_toLeftOf="@+id/su_data"
                app:layout_constraintRight_toRightOf="@+id/su_data"
                android:layout_width="0dp"
                app:layout_constraintHorizontal_bias="1.0"
                android:layout_height="100dp" />

            <CheckBox
                android:layout_width="28dp"
                android:id="@+id/checkBox"
                android:layout_height="24dp"
                app:layout_constraintRight_toLeftOf="@+id/team"
                android:layout_marginEnd="24dp"
                android:layout_marginRight="24dp"
                app:layout_constraintBottom_toBottomOf="@+id/team"
                app:layout_constraintTop_toTopOf="@+id/team"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:text="TEAM AND CONDITIONS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/team"
                android:textSize="14sp"
                android:layout_marginEnd="16dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="16dp"
                android:layout_marginStart="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="16dp"
                android:clickable="true"
                app:layout_constraintTop_toBottomOf="@+id/about"
                android:layout_marginTop="8dp" />

            <Button
                android:text="Sign Up"
                android:layout_width="144dp"
                android:layout_height="wrap_content"
                android:id="@+id/bt_sign_up"
                android:background="@color/colorPrimary"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/team"
                android:layout_marginEnd="16dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="16dp"
                android:layout_marginStart="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="16dp" />

        </android.support.constraint.ConstraintLayout>

    </ScrollView>

</FrameLayout>
