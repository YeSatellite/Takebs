<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <TextView
        android:text="Username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ro_username"
        android:textSize="20sp"
        android:layout_marginStart="32dp"
        app:layout_constraintLeft_toRightOf="@+id/ro_ava"
        android:layout_marginLeft="32dp"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        app:srcCompat="@drawable/common_google_signin_btn_icon_dark_pressed"
        android:id="@+id/ro_ava"
        android:layout_width="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_height="60dp" />

    <ImageView
        app:srcCompat="@drawable/point"
        android:id="@+id/imageView3"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintLeft_toLeftOf="@+id/imageView4"
        app:layout_constraintBottom_toTopOf="@+id/imageView4" />

    <TextView
        android:text="from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ro_from"
        app:layout_constraintLeft_toLeftOf="@+id/ro_username"
        app:layout_constraintBottom_toBottomOf="@+id/imageView3" />

    <TextView
        android:text="to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ro_to"
        app:layout_constraintBottom_toBottomOf="@+id/ro_from"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toRightOf="@+id/ro_from"
        android:layout_marginLeft="16dp" />

    <ImageView
        android:layout_width="20dp"
        app:srcCompat="@drawable/clock"
        android:id="@+id/imageView4"
        android:layout_height="20dp"
        app:layout_constraintRight_toLeftOf="@+id/ro_date"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/ro_ava" />

    <TextView
        android:text="date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ro_date"
        app:layout_constraintBottom_toBottomOf="@+id/imageView4"
        app:layout_constraintLeft_toLeftOf="@+id/ro_username" />

    <TextView
        android:text="time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ro_time"
        app:layout_constraintBottom_toBottomOf="@+id/ro_date"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toRightOf="@+id/ro_date"
        android:layout_marginLeft="16dp" />
</android.support.constraint.ConstraintLayout>