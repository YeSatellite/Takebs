<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_route"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yesat.yesat.takebs.RouteActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/common_google_signin_btn_icon_dark_normal"
        android:id="@+id/big_ava"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pro_name"
        android:textColor="@color/colorPrimary"
        android:layout_marginStart="24dp"
        app:layout_constraintLeft_toRightOf="@+id/big_ava"
        android:layout_marginLeft="24dp"
        app:layout_constraintTop_toTopOf="@+id/big_ava"
        android:layout_marginTop="16dp"
        android:textSize="18sp" />
    <View
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/big_ava"
        android:id="@+id/view3" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:srcCompat="@drawable/phone"
        android:id="@+id/imageView5"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView8"
        app:layout_constraintLeft_toLeftOf="@+id/imageView8" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:srcCompat="@drawable/calendar"
        android:id="@+id/imageView8"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView9"
        app:layout_constraintLeft_toLeftOf="@+id/imageView9" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:srcCompat="@drawable/dollar"
        android:id="@+id/imageView6"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView5"
        app:layout_constraintLeft_toLeftOf="@+id/imageView5" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:srcCompat="@drawable/about"
        android:id="@+id/imageView10"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView6"
        app:layout_constraintLeft_toLeftOf="@+id/imageView6" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:srcCompat="@drawable/point"
        android:id="@+id/imageView9"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/view3"
        android:layout_marginStart="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="24dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/big_to_from"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/imageView9"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="@+id/imageView9"
        app:layout_constraintBottom_toBottomOf="@+id/imageView9"
        android:textSize="18sp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/big_date"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/imageView8"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="@+id/imageView8"
        app:layout_constraintBottom_toBottomOf="@+id/imageView8"
        android:textSize="18sp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/big_tel"
        app:layout_constraintLeft_toRightOf="@+id/imageView5"
        app:layout_constraintTop_toTopOf="@+id/imageView5"
        app:layout_constraintBottom_toBottomOf="@+id/imageView5"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:textSize="18sp" />

    <TextView
        android:text="Shipment cost:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        app:layout_constraintLeft_toRightOf="@+id/imageView6"
        app:layout_constraintTop_toTopOf="@+id/imageView6"
        app:layout_constraintBottom_toBottomOf="@+id/imageView6"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:textSize="18sp" />

    <TextView
        android:text="Extra info:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/imageView10"
        android:layout_marginLeft="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView10"
        app:layout_constraintTop_toTopOf="@+id/imageView10"
        android:textSize="18sp" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:srcCompat="@drawable/ariplance"
        android:id="@+id/imageView12"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toRightOf="@+id/big_time"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toTopOf="@+id/big_time"
        app:layout_constraintBottom_toBottomOf="@+id/big_time" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:srcCompat="@drawable/clock"
        android:id="@+id/imageView13"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toRightOf="@+id/big_date"
        android:layout_marginLeft="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/big_date"
        app:layout_constraintTop_toTopOf="@+id/big_date" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/big_time"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/imageView13"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="@+id/imageView13"
        app:layout_constraintBottom_toBottomOf="@+id/imageView13"
        android:textSize="18sp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/big_delivery_method"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/imageView12"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="@+id/imageView12"
        app:layout_constraintBottom_toBottomOf="@+id/imageView12" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/big_cost"
        android:layout_marginStart="32dp"
        app:layout_constraintLeft_toRightOf="@+id/textView6"
        android:layout_marginLeft="32dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView6"
        app:layout_constraintTop_toTopOf="@+id/textView6"
        android:textSize="18sp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/big_extra"
        android:layout_marginStart="32dp"
        app:layout_constraintLeft_toRightOf="@+id/textView7"
        android:layout_marginLeft="32dp"
        app:layout_constraintTop_toTopOf="@+id/textView7"
        app:layout_constraintBottom_toBottomOf="@+id/textView7"
        android:textSize="18sp"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:text="Respond"
        android:id="@+id/act_route_respond"
        android:background="@color/colorPrimary"
        android:minHeight="@dimen/activity_vertical_margin"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="0dp"
        app:layout_constraintBottom_toTopOf="@+id/act_route_add_to_favo"
        android:layout_marginBottom="16dp"
        android:layout_height="40dp"
        android:layout_marginStart="64dp"
        android:layout_marginLeft="64dp"
        android:layout_marginEnd="64dp"
        android:layout_marginRight="64dp"
        app:layout_constraintHorizontal_bias="0.8" />

    <Button
        android:text="Add to favourites"
        android:id="@+id/act_route_add_to_favo"
        android:background="@color/colorPrimary"
        android:minHeight="@dimen/activity_vertical_margin"
        app:layout_constraintRight_toRightOf="@+id/act_route_respond"
        app:layout_constraintLeft_toLeftOf="@+id/act_route_respond"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="0dp"
        android:layout_marginBottom="16dp"
        android:layout_height="40dp" />

</android.support.constraint.ConstraintLayout>
